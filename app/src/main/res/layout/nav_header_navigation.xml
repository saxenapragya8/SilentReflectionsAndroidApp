<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:src="@mipmap/ic_nav_head"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="w,16:9"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="@dimen/user_profile_avatar_size"
        android:layout_height="@dimen/user_profile_avatar_size"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:elevation="24dp"
        android:src="@mipmap/ic_avatar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/navViewUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/profile_image"
        android:layout_below="@+id/profile_image"
        android:layout_marginBottom="2dp"
        android:layout_marginStart="0dp"
        android:gravity="start"
        android:text="Ayush Chaturvedi"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/user_profile_text_size"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/navViewEmail"
        app:layout_constraintLeft_toLeftOf="@+id/profile_image" />

    <TextView
        android:id="@+id/navViewEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/navViewUserName"
        android:layout_below="@+id/navViewUserName"
        android:layout_marginBottom="12dp"
        android:layout_marginStart="0dp"
        android:gravity="start"
        android:text="ayush.chaturvedi@gmail.com"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/user_profile_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/profile_image" />

</android.support.constraint.ConstraintLayout>