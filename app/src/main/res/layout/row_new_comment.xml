<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/secondary_divider">

    <ImageView
        android:id="@+id/reflectionAvatar"
        android:layout_width="@dimen/avatar_size"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/primary_row_margin"
        android:layout_marginTop="@dimen/primary_avatar_text_padding"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_unread" />

    <TextView
        android:id="@+id/commentVersionNo"
        style="@style/FSTE.Avatar"
        android:layout_width="@dimen/avatar_size"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginStart="@dimen/primary_row_margin"
        android:layout_marginTop="0dp"
        android:text="v1"
        android:textAlignment="center"
        android:typeface="monospace"
        app:layout_constraintBottom_toBottomOf="@+id/reflectionAvatar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/reflectionAvatar" />

    <TextView
        android:id="@+id/commentDate"
        style="@style/FSTE.Caption.Secondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/primary_row_margin"
        android:layout_marginTop="@dimen/primary_row_margin"
        android:text="@string/today"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <!-- TODO change date format: see github web code -->


    <EditText
        android:id="@+id/commentContent"
        style="@style/FSTE.Body1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/primary_row_margin"
        android:layout_marginEnd="@dimen/input_row_margin"
        android:layout_marginStart="@dimen/input_row_margin"
        android:layout_marginTop="@dimen/input_text_padding"
        android:backgroundTint="@android:color/transparent"
        android:gravity="top"
        android:hint="@string/hint_comment"
        android:inputType="textMultiLine"
        android:minLines="3"
        android:paddingBottom="@dimen/primary_row_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/commentDate"
        app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>